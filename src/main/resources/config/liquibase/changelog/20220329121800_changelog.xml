<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <property name="autoIncrement" value="true"/>

    <!--
    This changeset adds the database tables for storing testwise coverage reports for tests in programming exercises.
    It contains tables for ProgrammingExerciseTestwiseCoverageReport and ProgrammingExerciseTestwiseCoverageEntry.
    It also adds a new column to the test case table that represents the reference from a test case to a testwise coverage report.
    It also adds a new column to the exercise table representing if the testwise coverage will be recorded for this exercise.
    -->
    <changeSet author="ole-ve" id="20220329121800">
        <createTable tableName="programming_exercise_testwise_coverage_report">
            <column name="id" type="BIGINT" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="programming_exercise_test_case_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="programming_exercise_testwise_coverage_report"
                                 baseColumnNames="programming_exercise_test_case_id"
                                 constraintName="fk_testwise_coverage_report_test_case_id"
                                 referencedTableName="programming_exercise_test_case"
                                 referencedColumnNames="id"/>

        <createTable tableName="programming_exercise_testwise_coverage_entry">
            <column name="id" type="BIGINT" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="testwise_coverage_report_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="file_path" type="VARCHAR(512)"/>
            <column name="start_line" type="INT"/>
            <column name="line_count" type="INT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="programming_exercise_testwise_coverage_entry"
                                 baseColumnNames="testwise_coverage_report_id"
                                 constraintName="fk_testwise_coverage_entry_testwise_coverage_report_id"
                                 referencedTableName="programming_exercise_testwise_coverage_report"
                                 referencedColumnNames="id"/>

        <addColumn tableName="programming_exercise_details">
            <column name="testwise_coverage_enabled" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
